<%= form_for(@vehicle, :html => {:class => "form-horizontal"}) do |f| %>
  <fieldset>
  
    <div class="control-group">
      <%= f.label :make, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :make %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :model, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :model %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :year, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :year %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :oil_type, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :oil_type %>
      </div>
    </div>
    
    <div class="form-actions">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  
  </fieldset>
<% end %>
