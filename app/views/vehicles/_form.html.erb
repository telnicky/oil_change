<div class="container">
<%= form_for(@vehicle, :html => {:class => "form-horizontal"}) do |f| %>
 
  <fieldset>
   <%= f.hidden_field :owner_id, :value => params[:owner_id] %>

    <div class="control-group">
      <%= f.label :make, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :make %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :model, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :model %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :year, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :year %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :color, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :color %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :license_plate, :type => '', :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :license_plate %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :vin_number, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :vin_number %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :oil_type, :class => "control-label" %>
      <div class="controls">
        <%= f.select :oil_type, Vehicle::OIL_TYPE.invert %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :notes, :class => "control-label" %>
      <div class="controls">
        <%= f.text_area :notes %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  
  </fieldset>
<% end %>
</div>