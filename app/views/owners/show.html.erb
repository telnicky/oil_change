<div class="content-wrapper">

  <div class="row welcome-user">  
    <div class="span3">
      <h1>Welcome</h1>
      First name:     <%= @owner.first_name %>    <br/>
      Last name:      <%= @owner.last_name %>     <br/>
      Email address:  <%= @owner.email_address %> <br/>
      Phone number:   <%= @owner.phone_number %>  <br/>
      <%= link_to "Add a Vehicle", new_vehicle_path(:owner_id => @owner.id), :class => 'btn btn-success btn-small btn-block' %>
      <%= link_to "Edit User Info", edit_owner_path, :class => 'btn btn-primary btn-small' %>

    </div>
    <div class="span7" >
      <h1>Current Appointments</h1>
      = show current appointments
    </div>  
  </div>

  <div class="row ">

   <%= render 'vehicles' %>

  </div> 

</div>  