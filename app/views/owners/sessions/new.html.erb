<div class="mainWrapper">
  <div class="row">
    <div class="span4 banner-box">
      <h1>Vehicle Owner Instructions</h1>
      <ul>
        <li>Step 1. Sign Up</li>
        <li>Step 2. Add Your Vehicles</li>
        <li>Step 3. Schedule an oil change at any location you want (Home, Work, Office, etc)</li>
        <li>Step 4. Do anything you want, but wait around at a oil shop</li>
      </ul> 
    </div>  

    <div class="span4 banner-box">
      <h2>Sign in</h2>

      <%= form_for(resource, :as => resource_name, 
                             :url => session_path(resource_name),
                             :html => {:class => 'form-horizontal'}) do |f| %>

        <div><%= f.email_field :email, :placeholder => 'Email' %></div>

        <div><%= f.password_field :password, :placeholder => 'Password'  %></div>

        <% if devise_mapping.rememberable? -%>
          <div class="remember-me"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <% end -%>

        <div><%= f.submit "Sign in" %></div>
      <% end %>
      <div class='form-links'>
        <%= link_to "Sign up", new_registration_path(resource_name) %> |
        <%= link_to "Forgot your password?", new_password_path(resource_name) %> |
        <%= link_to "Sign in with facebook", omniauth_authorize_path(resource_name, :facebook) %>
      </div>
    </div>
  </div>
</div>  

