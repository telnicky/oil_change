<h1>Current Appointments:</h1>
  <div class="appointments-list">
    <table> 
      <tr>
        <th>Status:   </th>
        <th>Date:     </th>
        <th>Time Frame:</th>
        <th>Vehicle:  </th>
        <th>Mechanic: </th>

      <% @appointments.each do |a| %>
        <tr class="<%= cycle('even', 'odd')%>">
          <td>  <%= a.status %>                 </td>          
          <td>  <%= a.scheduled_date.strftime("%b %d, %y") %>         </td>
          <td>  <%= a.scheduled_start_time.strftime("%H:%M") %> - <%= a.scheduled_end_time.strftime("%H:%M")  %>     </td>
          <td>  <%= a.vehicle.make  %>, <%= a.vehicle.model %>, <%= a.vehicle.license_plate %>                </td>
          <td>  <%= a.mechanic %>               </td>    
        </tr>  
      <% end %>
  </table>
</div> 