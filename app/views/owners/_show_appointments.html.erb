<h1>Current Appointments:</h1>
  <div class="appointments-list">
    <table> 
      <thead>
      <tr>
        <th>Status:     </th>
        <th>Date:       </th>
        <th>Time Frame: </th>
        <th>Vehicle:    </th>
        <th>Mechanic:   </th>
        <th>Options:    </th>
      </tr>
      </thead>  
      <tbody>
      <% @appointments.each do |a| %>
        <tr class="<%= cycle('even', 'odd')%>">
          <td><%= Appointment::STATUS[a.status] %>                 </td>          
          <td><% if a.owner_start.present? %>      
              <%= a.owner_start.strftime("%A %b %d") %>
              <% end %>  
              </td>
          <td><% if a.owner_start.present? %> <% if a.owner_start.present? %>
                <%= a.owner_end.strftime("%H:%M%p") %> - <%= a.owner_end.strftime("%H:%M%p")  %>     
              <% end %> <% end %>
              </td>
          <td><%= Vehicle.find(a.vehicle).make  %>, <%= a.vehicle.model %> <br/> <%= a.vehicle.license_plate %>                </td>
          <td>  <% if a.mechanic_id.nil? %>
                  <p> ...pending... </p>
                <% else %>
                  <%= Mechanic.find(a.mechanic_id).company_name %> 
                <% end %>  
          </td>
          <td>  <%= link_to "Edit Appointment", edit_appointment_path(:appointment_id => a.id, :owner_id => @owner.id), 
                    :class => "btn btn-primary btn-small" %> 
                <%= link_to "Delete Appointment", appointment_path( :id => a.id, :owner_id => @owner.id), :method => 'delete', 
                    :confirm => 'Are you sure you want to permanently delete this appointment?', :class => 'btn btn-inverse btn-small' %>
          </td>        
        </tr>
      <% end %>
      <tbody>     
    </table>
  </div> 