<!--##################### START BODY & VIEWS ################################################################### -->    
<%= form_for(@appointment, :html => {:class => "form-horizontal"}) do |f| %>
  <fieldset>
    <%= f.hidden_field :owner_id, :value => params[:owner_id] %>
    <%= f.hidden_field :vehicle_id, :value => params[:vehicle_id] %>
<!--##################### LOCATION ############################################################################ -->    
    <h3>Where do you want your oil changed?</h3>
    <div class="location">
      <div class="control-group">
        <%= f.label :street, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :street, :id => "street"%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :city, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :city, :id => "city"%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :zip, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :zip, :id => "zip"%>
        </div>
      </div>

    <div id="map_canvas"></div>
   
<!--##################### TIME & DATE ############################################################################ -->    
  <h3>Schedule the date and time frame for your oil change.</h3>
    <div class="control-group">
      <%= f.label "What day do you want your oil change?", :class => "control-label" %>
      <div class="controls">
        <%=  datetime_select :owner_start, :date, :order => [:month, :day], :discard_year => true %>
        <br/>
      </div>
    </div>

    <div class="control-group">
      <%= f.label "What time will your vehicle be available?", :class => "control-label"  %>
      <div class="controls">
        To:
        <%= datetime_select :owner_end, :time, :ampm => true, :default => 2.hours.from_now, :discard_year => true, :class => "end-time-select"  %>
      </div>
    </div>

  <h3>What information would you like the mechanic to know?</h3>
    <div class="control-group">
      <%= f.label :owner_notes, :class => "control-label" %>
      <div class="controls">
        <%= f.text_area :owner_notes %>
      </div>
    </div>
    <!-- Mechanic form shouldn't be viewed on appointment creation, only when reviewed and changed.
    <div class="control-group">
      <%= f.label :mechanic_notes, :class => "control-label" %>
      <div class="controls">
        <%= f.text_area :mechanic_notes %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :mechanic_start, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :mechanic_start %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :mechanic_end, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :mechanic_end %>
      </div>
    </div> -->

    <div class="form-actions">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  
  </fieldset>
<% end %>
