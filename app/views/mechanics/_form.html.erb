<div class="container">
<%= form_for(@mechanic, :html => {:class => "form-horizontal"}) do |f| %>
  <fieldset>
  
  <div class="row">
    <div class="span5">
      <div class="control-group">
        <%= f.label :company_name, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :company_name %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :first_name, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :first_name %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :last_name, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :last_name %>
        </div>
      </div>
    </div>

    <div class="span5">
      <div class="control-group">
        <%= f.label :street, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :street %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :city, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :city %>
        </div>
      </div>


      <div class="control-group">
        <%= f.label :zip, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :zip %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :state, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :state %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="span5">
      <div class="control-group">
        <%= f.label :email_address, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :email_address %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :phone_number, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :phone_number %>
        </div>
      </div>
      <div class="control-group extra-padding">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    </div>  
  </div>

  </fieldset>
<% end %>
</div>